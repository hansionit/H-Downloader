<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hansion.hdownloder">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DownloadManagerActivity"></activity>

        <service android:name=".download.DownloadService">
            <intent-filter>
                <action android:name="com.hansion.hdownloader.adddownloadtask" />
                <action android:name="com.hansion.hdownloader.addmultidowntask" />
                <action android:name="com.hansion.hdownloader.cancledownloadtask" />
                <action android:name="com.hansion.hdownloader.canclealldownloadtask" />
                <action android:name="com.hansion.hdownloader.startalldownloadtask" />
                <action android:name="com.hansion.hdownloader.resumedownloadtask" />
                <action android:name="com.hansion.hdownloader.pausedownloadtask" />
                <action android:name="com.hansion.hdownloader.pausealldownloadtask" />
            </intent-filter>
        </service>
    </application>

</manifest>