<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mid_layout_selector"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp">

        <CheckBox
            android:id="@+id/checkbox"
            style="@style/downloadCheckboxTheme" />

        <RelativeLayout
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="9.5dp"
            android:layout_marginTop="9.5dp">

            <ImageView
                android:id="@+id/mPic"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/mChangeState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mImgState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22.5dp"
                    android:src="@drawable/list_icon_download" />

                <TextView
                    android:id="@+id/mTextState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2.5dp"
                    android:text="@string/wait"
                    android:textColor="@color/white"
                    android:textSize="10.5sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="219dp"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <TextView
                android:id="@+id/mName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="robosea_001.mp4"
                android:textColor="@color/empty_tip_text"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2.5dp"
                android:background="@drawable/list_label_bg"
                android:gravity="center">

                <TextView
                    android:id="@+id/mType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频"
                    android:textColor="@color/pressed_text"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/mProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="22.5dp"
            android:background="@null" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp">

            <TextView
                android:id="@+id/mNetSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#757575"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/mFileSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="1.3MB"
                android:textColor="#757575"
                android:textSize="11sp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>